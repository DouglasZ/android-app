<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.apppedidos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppPedidos">
        <activity
            android:name=".PedidoVisualizarActivity"
            android:label="Visualizar Pedido"
            android:parentActivityName=".PedidoListActivity" />
        <activity
            android:name=".PedidoListActivity"
            android:label="Lista de Pedidos"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PedidoActivity"
            android:label="Novo Pedido"
            android:parentActivityName=".PedidoListActivity" />
        <activity
            android:name=".ProdutoListActivity"
            android:label="Lista de Produtos"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ProdutoActivity"
            android:label="Cadastro de Produto"
            android:parentActivityName=".ProdutoListActivity" />
        <activity
            android:name=".MainActivity"
            android:label="Dashboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>